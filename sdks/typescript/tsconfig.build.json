{
  "compilerOptions": {
    "outDir": "lib/esm",
    "target": "ES6",
    "module": "ES6", // Consider changing to "ES6" if targeting modern bundlers
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
